# Environment Variables

# Base Path (for GitHub Pages deployment)
NEXT_PUBLIC_BASE_PATH=/YourSolar

# API Configuration
NEXT_PUBLIC_API_URL=https://api.yoursolar.com
NEXT_PUBLIC_API_KEY=your_api_key_here

# NextAuth Configuration (for authentication)
NEXTAUTH_URL=https://yourusername.github.io/YourSolar
NEXTAUTH_SECRET=your_nextauth_secret_here_generate_with_openssl_rand_base64_32

# OAuth Providers (optional)
GITHUB_ID=your_github_oauth_app_id
GITHUB_SECRET=your_github_oauth_app_secret

GOOGLE_ID=your_google_oauth_client_id
GOOGLE_SECRET=your_google_oauth_client_secret

# Database (if using)
DATABASE_URL=your_database_connection_string

# Weather API
WEATHER_API_KEY=your_weather_api_key

# Analytics (optional)
NEXT_PUBLIC_GA_ID=your_google_analytics_id
